@model ShopLaptop.Models.Laptop

@using ShopLaptop.Models
@{
    ViewBag.Title = "Details";

    HomeModel home = new HomeModel();
}
<!-- Product section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="~/Content/images/@Model.hinh" alt="..." /></div>
            <div class="col-md-6">
                <div class="row text-center" style="font-weight:bold">
                    <div class="col-6 small mb-1 pull-left" style="color:red">Cập nhật: @Model.ngaycapnhat.GetValueOrDefault().ToString("dd/MM/yyyy")</div>
                    <div class="col-6 small mb-1 pull-right" style="color:#0094ff">@Model.Hang.tenhang - @Model.NhuCau.tennhucau</div>
                </div>
                <h1 class="display-5 fw-bolder">@Model.tenlaptop</h1>
                <div class="fs-5 mb-5">
                    @*<span class="text-decoration-line-through">@Model.giaban</span>*@
                    <span>@Model.giaban đ</span>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Thuộc tính</th>
                            <th scope="col">Mô tả</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>CPU</td>
                            <td>@Model.cpu</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>GPU</td>
                            <td>@Model.gpu</td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td>Hardware</td>
                            <td>@Model.hardware</td>
                        </tr>
                        <tr>
                            <th scope="row">4</th>
                            <td>Màn hình</td>
                            <td>@Model.manhinh</td>
                        </tr>
                        <tr>
                            <th scope="row">5</th>
                            <td>Pin</td>
                            <td>@Model.pin</td>
                        </tr>
                        <tr>
                            <th scope="row">6</th>
                            <td>Số lượng tồn</td>
                            <td>@Model.soluongton</td>
                        </tr>
                    </tbody>
                </table>
                <div class="d-flex">
                    <input class="form-control text-center me-3" id="inputQuantity" type="number" value="1" style="max-width: 3rem;" />
                    <a class="btn btn-danger flex-shrink-0">
                        <i class="fa fa-cart-plus me-1"></i>
                        Thêm vào giỏ
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-success flex-shrink-0" style="margin-left:14px">
                        <i class="fa fa-shopping-bag me-1"></i>
                        Mua thêm
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

