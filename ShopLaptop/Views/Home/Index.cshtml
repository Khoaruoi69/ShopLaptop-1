@model ShopLaptop.Models.HomeModel

@{
    ViewBag.Title = "Home Page";
}

<main class="row">

    <!-- Slider -->
    <div class="col-12 px-0">
        <div id="slider" class="carousel slide w-100" data-bs-ride="carousel">
            <ol class="carousel-indicators">
                <li data-bs-target="#slider" data-bs-slide-to="0" class="active"></li>
                <li data-bs-target="#slider" data-bs-slide-to="1"></li>
                <li data-bs-target="#slider" data-bs-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img src="~/Content/images/banner-msi-1.jpg" class="slider-img">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/images/banner-levono-2.jpg" class="slider-img">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/images/banner-laptop-800x300.png" class="slider-img">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#slider" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#slider" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <!-- Slider -->
    <!-- Featured Products -->
    <div class="col-12">
        <div class="row">
            <div class="col-12 py-3">
                <div class="row">
                    <div class="col-12 text-center text-uppercase">
                        <h2>LAPTOP NỔI BẬT</h2>
                    </div>
                </div>
                <div class="row">
                    @foreach (var item in Model.GetListLaptop_FEATURED())
                    {
                        <!-- Product -->
                        <div class="col-lg-3 col-sm-6 my-3">
                            <div class="col-12 bg-white text-center h-100 product-item">
                                <div class="row h-100">
                                    <div class="col-12 p-0 mb-3">
                                        <a href="@Url.Action( "Details", "Home")">
                                            <img src="~/Content/images/@item.hinh" class="img-fluid">
                                        </a>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <a href="@Url.Action( "Details", "Home")" class="product-name">@item.tenlaptop</a>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <small>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="far fa-star"></i>
                                            <i class="far fa-star"></i>
                                        </small>
                                        <span class="product-price-old">

                                        </span>
                                        <br>
                                        <span class="product-price">
                                            @item.giaban đ
                                        </span>
                                    </div>
                                    <div class="col-12 mb-3 align-self-end">
                                        <button class="btn btn-success" type="button"><i class="fas fa-eye me-2"></i>Xem chi tiết</button>
                                        <button class="btn btn-outline-dark" type="button"><i class="fas fa-cart-plus me-2"></i>Thêm vào giỏ</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Product -->
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Featured Products -->

    <div class="col-12">
        <hr>
    </div>

    <!-- Latest Product -->
    <div class="col-12">
        <div class="row">
            <div class="col-12 py-3">
                <div class="row">
                    <div class="col-12 text-center text-uppercase">
                        <h2>LAPTOP MỚI NHẤT</h2>
                    </div>
                </div>
                <div class="row">
                   
                    @foreach (var item in Model.GetListLaptop_LASTEST())
                    {
                        <!-- Product -->
                        <div class="col-lg-3 col-sm-6 my-3">
                            <div class="col-12 bg-white text-center h-100 product-item">
                                <div class="row h-100">
                                    <div class="col-12 p-0 mb-3">
                                        <a href="@Url.Action( "Details", "Home")">
                                            <img src="~/Content/images/@item.hinh" class="img-fluid">
                                        </a>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <a href="@Url.Action( "Details", "Home")" class="product-name">@item.tenlaptop</a>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <small>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="far fa-star"></i>
                                            <i class="far fa-star"></i>
                                        </small>
                                        <span class="product-price-old">

                                        </span>
                                        <br>
                                        <span class="product-price">
                                            @item.giaban đ
                                        </span>
                                    </div>
                                    <div class="col-12 mb-3 align-self-end">
                                        <button class="btn btn-primary" type="button"><i class="fas fa-eye me-2"></i>Xem chi tiết</button>
                                        <button class="btn btn-outline-dark" type="button"><i class="fas fa-cart-plus me-2"></i>Thêm vào giỏ</button>
                                    </div>
                                   
                                </div>
                            </div>
                        </div>
                        <!-- Product -->
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Latest Products -->

    <div class="col-12">
        <hr>
    </div>

    <!-- Top Selling Products -->
    <div class="col-12">
        <div class="row">
            <div class="col-12 py-3">
                <div class="row">
                    <div class="col-12 text-center text-uppercase">
                        <h2>LAPTOP GIÁ RẺ (<= 15Tr VNĐ)</h2>
                    </div>
                </div>
                <div class="row">
                    @foreach (var item in Model.GetListLaptop_TOPSELLING())
                    {
                        <!-- Product -->
                        <div class="col-lg-3 col-sm-6 my-3">
                            <div class="col-12 bg-white text-center h-100 product-item">
                                <div class="row h-100">
                                    <div class="col-12 p-0 mb-3">
                                        <a href="@Url.Action( "Details", "Home")">
                                            <img src="~/Content/images/@item.hinh" class="img-fluid">
                                        </a>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <a href="@Url.Action( "Details", "Home")" class="product-name">@item.tenlaptop</a>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <small>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="far fa-star"></i>
                                            <i class="far fa-star"></i>
                                        </small>
                                        <span class="product-price-old">

                                        </span>
                                        <br>
                                        <span class="product-price">
                                            @item.giaban đ
                                        </span>
                                    </div>
                                    <div class="col-12 mb-3 align-self-end">
                                        <button class="btn btn-warning" type="button"><i class="fas fa-cart-plus me-2"></i>Xem chi tiết</button>
                                        <button class="btn btn-outline-dark" type="button"><i class="fas fa-cart-plus me-2"></i>Thêm vào giỏ</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Product -->
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Top Selling Products -->

    <div class="col-12 py-3 d-sm-block d-none" style="background-color:#f5e31a;">
        <div class="row">
            <div class="col-lg-3 col ms-auto large-holder">
                <div class="row">
                    <div class="col-auto ms-auto large-icon">
                        <i class="fas fa-money-bill"></i>
                    </div>
                    <div class="col-auto me-auto large-text">
                        Giá tốt nhất
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col large-holder">
                <div class="row">
                    <div class="col-auto ms-auto large-icon">
                        <i class="fas fa-truck-moving"></i>
                    </div>
                    <div class="col-auto me-auto large-text">
                        Chuyển phát nhanh
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col me-auto large-holder">
                <div class="row">
                    <div class="col-auto ms-auto large-icon">
                        <i class="fas fa-check"></i>
                    </div>
                    <div class="col-auto me-auto large-text">
                        Sản phẩm chính hãng
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>